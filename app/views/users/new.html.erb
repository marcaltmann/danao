<h1>
  Register
</h1>

<%= form_for :user do |f| %>
  <%= f.label :email, 'Email' %>
  <%= f.text_field :email %>

  <%= f.label :name, 'Name' %>
  <%= f.text_field :name %>

  <%= f.label :password, 'Password' %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, 'Confirm password' %>
  <%= f.password_field :password_confirmation %>

  <div>
    <%= f.submit 'Register' %>
  </div>
<% end %>